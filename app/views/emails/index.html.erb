<div class="d-flex">
<table class="table table-striped table-dark" id="email-ajax">
  <thead>
    <tr>
      
      <th scope="col">OBJECT</th>
      
    </tr>
  </thead>
      
  <tbody >
        
        <% @emails.each do |email| %>
                <tr id="<%=email.id%>">
                    <td><%=link_to email.object, email_path(email.id), remote: true%></td>
                </tr>
                    
        <% end %>
                   
  </tbody>
            
</table>


         
        <table class="table table-striped table-dark" id="email-ajax">
  <thead>
    <tr>
      
      <th scope="col">CONTENU</th>
      
    </tr>
  </thead>
      
  <tbody >
        
      
                <tr id ='body-content'>
                    <td></td>
                </tr>
                    
        
                   
  </tbody>
            
</table>

</div>


      


<br><br>

<div class="form">
  <%= form_tag(emails_path, method: :post, class: "form", remote: true) do %>
    <label for="object">Object
    <%= text_field_tag  :object %>

    <label for="body">Body
    <%= text_field_tag  :body %>

    <%= submit_tag 'create', :name => 'commit'%>
  <% end %>
</div>
